<ui:Page
    x:Class="STranslate.Views.Pages.HistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvt="clr-namespace:STranslate.Converters"
    xmlns:control="clr-namespace:STranslate.Controls"
    xmlns:core="clr-namespace:STranslate.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://github.com/zggsong/2022/xaml"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:STranslate.ViewModels.Pages"
    Title="History"
    d:DataContext="{d:DesignInstance Type=vm:HistoryViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="850"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ui:Page.Resources>
        <s:BindingProxy x:Key="VmProxy" Data="{Binding RelativeSource={RelativeSource AncestorType=ui:Page}, Path=DataContext}" />
    </ui:Page.Resources>
    <Grid Margin="20,10,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DockPanel Margin="0,0,0,12">
            <TextBlock
                DockPanel.Dock="Left"
                Style="{DynamicResource {x:Static ui:ThemeKeys.SubtitleTextBlockStyleKey}}"
                Text="{DynamicResource History}" />
            <control:IconButton
                Margin="10,0,0,0"
                Command="{Binding RefreshCommand}"
                Icon="{x:Static ui:FluentSystemIcons.ArrowSync_20_Regular}" />
        </DockPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="2*"
                    MinWidth="200"
                    MaxWidth="400" />
                <ColumnDefinition Width="1" />
                <ColumnDefinition Width="3*" MinWidth="300" />
            </Grid.ColumnDefinitions>
            <Grid Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <TextBox
                    x:Name="PART_SearchBox"
                    VerticalAlignment="Top"
                    ui:ControlHelper.PlaceholderText="{DynamicResource HistorySearch}"
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                <ListBox
                    Grid.Row="1"
                    control:ListBoxScrollBehavior.ScrollAtBottomCommand="{Binding LoadMoreCommand}"
                    Background="Transparent"
                    ItemsSource="{Binding HistoryItems}"
                    SelectedItem="{Binding SelectedItem}">
                    <ListBox.ItemContainerStyle>
                        <Style BasedOn="{StaticResource {x:Type ListBoxItem}}" TargetType="ListBoxItem">
                            <Setter Property="Height" Value="40" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Setter Property="Padding" Value="10,0" />
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Text="{Binding SourceText}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Border Grid.Row="2" Background="{DynamicResource {x:Static ui:ThemeKeys.SystemFillColorNeutralBackgroundBrushKey}}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="{DynamicResource STControlFontSize12}">
                        <Run Text="{DynamicResource Total}" />
                        <Run Text=" " />
                        <Run Text="{Binding TotalCount}" />
                        <Run Text=" " />
                        <Run Text="{DynamicResource Item}" />
                    </TextBlock>
                </Border>
            </Grid>

            <GridSplitter
                Grid.Column="1"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{DynamicResource CardStrokeColorDefaultBrush}"
                ResizeBehavior="PreviousAndNext"
                ResizeDirection="Columns" />
            <Grid Grid.Column="2">
                <control:STranslateBadge Visibility="{Binding SelectedItem, Converter={cnvt:EqualToVisibilityConverter}}" />
                <ui:ScrollViewerEx>
                    <ContentControl Content="{Binding SelectedItem}">
                        <ContentControl.Resources>
                            <DataTemplate DataType="{x:Type core:HistoryModel}">
                                <control:HistoryControl Margin="20,0" />
                            </DataTemplate>
                        </ContentControl.Resources>
                    </ContentControl>
                </ui:ScrollViewerEx>
            </Grid>
        </Grid>
    </Grid>
</ui:Page>