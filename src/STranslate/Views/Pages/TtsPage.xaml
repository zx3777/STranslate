<ui:Page
    x:Class="STranslate.Views.Pages.TtsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvt="clr-namespace:STranslate.Converters"
    xmlns:control="clr-namespace:STranslate.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="urn:gong-wpf-dragdrop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:STranslate.ViewModels.Pages"
    Title="Tts"
    d:DataContext="{d:DesignInstance Type=vm:TtsViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="20,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock
                DockPanel.Dock="Left"
                Style="{DynamicResource {x:Static ui:ThemeKeys.TitleTextBlockStyleKey}}"
                Text="{DynamicResource Tts}" />
        </DockPanel>
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="200" />
                <ColumnDefinition Width="1" />
                <ColumnDefinition Width="3*" MinWidth="300" />
            </Grid.ColumnDefinitions>
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <control:ServicePanel
                    x:Name="ServicePanel"
                    Grid.Row="0"
                    Margin="0,0,20,0"
                    VerticalAlignment="Stretch"
                    dd:DragDrop.IsDragSource="True"
                    dd:DragDrop.IsDropTarget="True"
                    dd:DragDrop.UseDefaultDragAdorner="True"
                    DeleteCommand="{Binding DeleteCommand}"
                    DuplicateCommand="{Binding DuplicateCommand}"
                    ItemsSource="{Binding Instance.Services}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectedItem="{Binding SelectedItem, Mode=TwoWay}" />
                <UniformGrid
                    Grid.Row="1"
                    Margin="0,0,20,0"
                    Columns="2">
                    <Button
                        Margin="0,0,5,0"
                        HorizontalAlignment="Stretch"
                        Command="{Binding AddServiceCommand}">
                        <ui:IconAndText Content="{DynamicResource Add}" Icon="{x:Static ui:FluentSystemIcons.Add_20_Regular}" />
                    </Button>
                    <Button
                        Margin="5,0,0,0"
                        HorizontalAlignment="Stretch"
                        Command="{Binding DeleteCommand}"
                        CommandParameter="{Binding SelectedItem}">
                        <ui:IconAndText Content="{DynamicResource Delete}" Icon="{x:Static ui:FluentSystemIcons.Delete_20_Regular}" />
                    </Button>
                </UniformGrid>
            </Grid>
            <GridSplitter
                Grid.Column="1"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{DynamicResource CardStrokeColorDefaultBrush}"
                ResizeBehavior="PreviousAndNext"
                ResizeDirection="Columns" />
            <ui:ScrollViewerEx Grid.Column="2" Margin="20,0,0,0">
                <ContentControl Content="{Binding SettingUI}" />
            </ui:ScrollViewerEx>
        </Grid>
    </Grid>
</ui:Page>